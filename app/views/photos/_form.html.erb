<%= form_for @photo, url: [@user, @photo]  do |f| %>
  <!-- FORM -->
  <div class="flex flex-col mb-4">
	<!-- NAME -->
	<div class="block mb-4 w-full">
	  <%= f.label :name, class: 'block mb-2 uppercase font-bold text-sm text-grey-dark' %>
	  <%= f.text_field :name, class: "apprearance-none w-full px-4 py-3 rounded border border-transparent bg-grey-lighter text-grey-darkest" %>
	  <%- if @photo.errors[:name].any? %>
		<p class="block text-xs text-red my-2"><%= @photo.errors[:name].to_sentence.capitalize %></p>
	  <% end %>
	</div>
	<!-- FILE -->
	<div class="block mb-4 w-full">
	  <%= f.label :file, class: 'block mb-2 uppercase font-bold text-sm text-grey-dark' %>
	  <%= f.text_field :file, class: "apprearance-none w-full px-4 py-3 rounded border border-transparent bg-grey-lighter text-grey-darkest" %>
	  <%- if @photo.errors[:file].any? %>
		<p class="block text-xs text-red my-2"><%= @photo.errors[:file].to_sentence.capitalize %></p>
	  <% end %>
	</div>
  </div>
  <!-- BUTTONS -->
  <div class="flex justify-between items-center">
	<!-- CANCEL BTN -->
	<%= link_to 'Annuler', user_path(@user), :class => 'flex items-center px-6 py-3 rounded bg-grey-lightest hover:bg-grey-lighter' %>
	<!-- EDIT BTN -->
	<button type="submit" class="flex items-center px-6 py-3 rounded bg-green hover:bg-green-dark text-white">
	  <span class="text-blue-lightest mr-2">
		<i class="fas fa-check"></i>
	  </span>
	  <span>Save</span>
	</button>
  </div>
<% end %>
