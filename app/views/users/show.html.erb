<section class="min-h-screen h-auto w-full bg-grey-lighter">
  <div class="container mx-auto py-8">
	<!-- USER CARD -->
	<div class="flex flex-col items-center">
	  <div class="w-1/2">
		<div class="flex items-center justify-between mb-8">
		  <h2 class="text-xl text-grey-dark">User account</h2>
		  <a href="<%= users_path() %>" class="inline-block mb-4 px-4 py-2">
			<span class="mr-2">
			  <i class="fas fa-chevron-left"></i>
			</span>
			<span>Go to previous page</span>
		  </a>
		</div>
		<div class="rounded shadow-md bg-white">
		  <!-- HEADING -->
		  <div class="flex justify-center items-center p-8 pb-4">
			<div class="h-32 w-32 rounded-full overflow-hidden bg-grey-light mr-8 p-8">
			  <span class="block w-full h-full text-5xl text-center text-white">
				<i class="fas fa-user"></i>
			  </span>
			</div>
			<div class="leading-normal">
			  <p class="text-2xl font-medium"><%= @user.fullname %></p>
			  <p class="text-xl text-grey-darker"><%= @user.email %></p>
			</div>
		  </div>
		  <!-- DETAILS -->
		  <div class="px-8 py-4 leading-loose bg-grey-lightest">
			<div class="flex items-center">
			  <span class="text-grey mr-4">
				<i class="fas fa-phone"></i>
			  </span>
			  <span class="text-lg"><%= @user.phone %></span>
			</div>
			<div class="flex items-center">
			  <span class="text-grey mr-4">
				<i class="fas fa-birthday-cake"></i>
			  </span>
			  <span class="text-lg"><%= @user.birthdate.strftime('%d/%m/%Y') %></span>
			</div>
		  </div>
		  <!-- BUTTONS -->
		  <div class="flex justify-between items-center p-8 pt-4">
			<!-- DELETE BTN -->
			<%= link_to user_path(@user), method: :delete, data: {confirm: "Are you sure you want to delete this account ?"}, class: 'flex items-center px-6 py-3 rounded bg-red hover:bg-red-dark text-white' do %>
			  <span class="text-red-lightest mr-2">
				<i class="fas fa-trash-alt"></i>
			  </span>
			  <span>Delete account</span>
			<% end %>
			<!-- EDIT BTN -->
			<a href="<%= edit_user_path(@user) %>" class="flex items-center px-6 py-3 rounded bg-blue hover:bg-blue-dark text-white">
			  <span class="text-blue-lightest mr-2">
				<i class="fas fa-pencil-alt"></i>
			  </span>
			  <span>Edit account</span>
			</a>
		  </div>
		</div>
	  </div>
	</div>
	<div class="block mx-auto my-8 h-px w-1/2 bg-grey-light"></div>
	<!-- PHOTOS -->
	<div class="flex flex-col items-center">
	  <div class="w-1/2">
		<div class="flex items-center justify-between mb-8">
		  <h2 class="text-xl text-grey-dark">User photos</h2>
		  <a href="<%= new_user_photo_path(@user) %>" class="flex items-center px-6 py-3 rounded bg-blue hover:bg-blue-dark text-white">
			<span class="mr-2">
			  <i class="fas fa-cloud-upload-alt"></i>
			</span>
			<span>Upload photo</span>
		  </a>
		</div>
		<div class="flex flex-wrap -m-4">
		  <%- @user.photos.each do |photo| %>
			<div class="p-4 w-1/2">
			  <div class="p-2 pb-0 bg-white shadow">
				<img src="<%= photo.file %>" alt="<%= photo.name %>" class="block max-w-full max-h-full self-center">
				<div class="flex items-center">
				  <p class="text-sm text-grey-dark"><%= photo.name %></p>
				  <div class="flex items-center ml-auto">
					<%= link_to edit_user_photo_path(@user, photo), class: 'flex items-center p-3 text-grey hover:text-grey-dark' do %>
					  <span class="fas fa-pencil-alt"></span>
					<% end %>
					<%= link_to user_photo_path(@user, photo), method: :delete, data: {confirm: "Are you sure you want to delete this photo ?"}, class: 'flex items-center p-3 text-grey hover:text-red' do %>
					  <span class="fas fa-trash-alt"></span>
					<% end %>
				  </div>
				</div>
			  </div>
			</div>
		  <% end %>
		</div>
	  </div>
	</div>
  </div>
</section>
